<h2>閲覧</h2>

<div class="content_area">

  <div class="item_area">
    <p><strong>物件名:</strong> <%= @property.name %></p>
    <p><strong>賃料:</strong> <%= converting_to_jpy(@property.rent) %>円</p>
    <p><strong>住所:</strong> <%= @property.address %></p>
    <p><strong>築年数 </strong> <%= @property.age %>年</p>
    <p><strong>備考 </strong> <%= @property.notes %></p>
  </div>

  <hr width="100%" size="1" align="center" noshade="">

  <% n = 0 %>
  <% @property.stations.each do |station| %>

    <p class="station_title">最寄り駅<%= n += 1 %></p>

    <div class="item_area">
      <p><strong>路線名 </strong> <%= station.route %></p>
      <p><strong>駅名 </strong> <%= station.station_name %></p>
      <p><strong>徒歩分数 </strong> <%= station.distance %>分</p>
    </div>

  <% end %>

  <span class="to_other_page"><%= link_to "編集", edit_property_path %></span>
  | <span class="to_other_page"><%= link_to "戻る", properties_path %></span>

</div>
