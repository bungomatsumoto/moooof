<h2>閲覧</h2>

<div class="content_area">

  <div class="item_area">
    <p><strong>物件名:</strong> <%= @property.name %></p>
    <p><strong>賃料:</strong> <%= converting_to_jpy(@property.rent) %>円</p>
    <p><strong>住所:</strong> <%= @property.address %></p>
    <p><strong>築年数 </strong> <%= @property.age %>年</p>
    <p><strong>備考 </strong> <%= @property.notes %></p>
  </div>

  <hr width="100%" size="1" align="center" noshade="">

  <p class="station_title">最寄り駅1</p>

  <div class="item_area">
    <p><strong>路線名 </strong> <%= @property.stations.route %></p>
    <p><strong>駅名 </strong> <%= @property.stations.station_name %></p>
    <p><strong>徒歩分数 </strong> <%= @property.stations.distance %>分</p>
  </div>

  <p class="station_title">最寄り駅2</p>

  <div class="item_area">
    <p><strong>路線名 </strong> <%= @property.stations.route %></p>
    <p><strong>駅名 </strong> <%= @property.stations.station_name %></p>
    <p><strong>徒歩分数 </strong> <%= @property.stations.distance %>分</p>
  </div>

  <span class="to_other_page"><%= link_to "編集", edit_property_path %></span>
  | <span class="to_other_page"><%= link_to "戻る", property_path %></span>

</div>
